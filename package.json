{
  "name": "js-stack-from-scratch",
  "version": "3.0.0",
  "repository": "verekia/js-stack-boilerplate",
  "author": "Jonathan Verrecchia - @verekia",
  "license": "MIT",
  "scripts": {
    "start": "npm-run-all clean docker -p nodemon client-watch",
    "dev:server-only": "run-s clean docker nodemon",
    "prod:build": "run-s clean client-build babel",
    "prod:local": "run-s docker prod:build heroku-local",
    "client-watch": "parcel watch src/_client/client.js --public-url . -d dist/js -o bundle.js",
    "client-build": "parcel build src/_client/client.js --no-source-maps -d dist/js -o bundle.js",
    "docker": "docker-compose up -d",
    "clean": "rimraf lib dist",
    "nodemon": "nodemon",
    "babel": "babel src -d lib --ignore .test.js",
    "lint": "eslint src && flow",
    "test": "jest --coverage",
    "migrate-db": "knex --knexfile src/_db/knex-config.js --cwd . migrate:latest",
    "heroku-local": "cross-env NODE_ENV=production heroku local",
    "heroku-postbuild": "yon prod:build",
    "precommit": "run-s lint test"
  },
  "babel": {
    "presets": [
      "env",
      "flow",
      "react"
    ],
    "plugins": [
      "flow-react-proptypes",
      "transform-object-rest-spread",
      [
        "module-resolver",
        {
          "root": [
            "./src"
          ]
        }
      ]
    ]
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ignore": [
      "lib",
      "dist"
    ],
    "exec": "babel-node src/_server/server.js"
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "dependencies": {
    "@material-ui/core": "^1.2.3",
    "@material-ui/icons": "^1.1.0",
    "async-exit-hook": "^2.0.1",
    "babel-polyfill": "^6.26.0",
    "bcrypt": "^2.0.1",
    "bluebird": "^3.5.1",
    "dotenv": "^6.0.0",
    "graphql": "^0.13.2",
    "isomorphic-fetch": "^2.2.1",
    "jss": "^9.8.7",
    "jss-preset-default": "^4.5.0",
    "knex": "^0.14.6",
    "koa": "^2.5.1",
    "koa-body": "^4.0.4",
    "koa-compress": "^3.0.0",
    "koa-favicon": "^2.0.1",
    "koa-graphql": "^0.7.5",
    "koa-mount": "^3.0.0",
    "koa-router": "^7.4.0",
    "koa-session": "^5.8.1",
    "koa-static": "^5.0.0",
    "lodash": "^4.17.10",
    "pg": "^7.4.3",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-helmet": "^5.2.0",
    "react-hot-loader": "^4.3.3",
    "react-jss": "^8.5.1",
    "react-redux": "^5.0.7",
    "react-router": "4.3.1",
    "react-router-dom": "4.3.1",
    "read-env": "^1.2.0",
    "recompose": "^0.27.1",
    "redis": "^2.8.0",
    "redux": "^4.0.0",
    "redux-actions": "^2.4.0",
    "redux-thunk": "^2.3.0",
    "serialize-javascript": "^1.5.0",
    "socket.io": "^2.1.1",
    "socket.io-client": "^2.1.1",
    "uuid": "^3.2.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.5",
    "babel-jest": "^23.0.1",
    "babel-plugin-flow-react-proptypes": "^24.0.1",
    "babel-plugin-module-resolver": "^3.1.1",
    "babel-plugin-transform-es2015-spread": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.24.1",
    "cross-env": "^5.2.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-react-app": "^2.1.0",
    "eslint-import-resolver-babel-module": "^4.0.0",
    "eslint-plugin-flowtype": "^2.49.3",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-react": "^7.9.1",
    "flow-bin": "^0.75.0",
    "husky": "^0.14.3",
    "jest": "^23.1.0",
    "nodemon": "^1.17.5",
    "npm-run-all": "^4.1.3",
    "parcel-bundler": "^1.9.2",
    "prettier": "^1.13.5",
    "rimraf": "^2.6.2",
    "yarn-or-npm": "^2.0.4"
  }
}
